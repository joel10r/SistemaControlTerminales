@using PagedList.Mvc;
@using PagedList;
@model IPagedList<SCT.Models.TipoAnotacion>

@{
    ViewBag.Title = "Anotación";
}

<h2>Anotaciones Registradas</h2>

<p>
    @Html.ActionLink("Agregar Anotación", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().nombreTipoAnotacion)
        </th>
        <th>Acción</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreTipoAnotacion)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.idTipoAnotacion }, htmlAttributes: new { @class = "glyphicon glyphicon-edit btn btn-success", title = "Editar Anotación" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.idTipoAnotacion }, htmlAttributes: new { @class = "glyphicon glyphicon-remove btn btn-success", title = "Eliminar Anotación" })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
