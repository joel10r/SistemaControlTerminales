@using PagedList.Mvc;
@using PagedList;
@model IPagedList<SCT.Models.FormaPago>

@{
    ViewBag.Title = "Forma de Pago";
}

<h2>Formas de Pago Registradas</h2>

<p>
    @Html.ActionLink("Agregar Forma de Pago", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().nombreFormaPago)
        </th>
        <th>Acción</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreFormaPago)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.idFormaPago }, htmlAttributes: new { @class = "glyphicon glyphicon-edit btn btn-success", title = "Editar Forma de Pago" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.idFormaPago }, htmlAttributes: new { @class = "glyphicon glyphicon-remove btn btn-success", title = "Eliminar Forma de Pago" })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
