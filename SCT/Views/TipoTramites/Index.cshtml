@using PagedList.Mvc;
@using PagedList;
@model IPagedList<SCT.Models.TipoTramite>

@{
    ViewBag.Title = "Tipo de Trámite";
}

<h2>Trámites Registrados</h2>

<p>
    @Html.ActionLink("Agregar Tipo de Trámite", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().nombreTipoTramite)
        </th>
        <th>Acción</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreTipoTramite)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.idTipoTramite }, htmlAttributes: new { @class = "glyphicon glyphicon-edit btn btn-success", title = "Editar Trámite" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.idTipoTramite }, htmlAttributes: new { @class = "glyphicon glyphicon-remove btn btn-success", title = "Eliminar Trámite" })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
